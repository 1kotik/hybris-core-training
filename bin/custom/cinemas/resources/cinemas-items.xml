<?xml version="1.0" encoding="ISO-8859-1"?>
<items 	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
			xsi:noNamespaceSchemaLocation="items.xsd">

	<enumtypes>
		<enumtype code="SeatType" generate="true" autocreate="true" dynamic="true"/>
	</enumtypes>

	<relations>
		<relation code="CinemaHall2Seats" autocreate="true" generate="false" localized="false">
			<sourceElement qualifier="cinemaHall" type="CinemaHall" cardinality="one">
				<modifiers optional="false" initial="true"/>
			</sourceElement>
			<targetElement qualifier="seats" type="Seat" cardinality="many" collectiontype="set" ordered="false"/>
		</relation>
	</relations>

	<itemtypes>
		<itemtype code="Cinema" generate="true" autocreate="true">
			<deployment table="Cinemas" typecode="10001"/>
			<attributes>
				<attribute qualifier="code" type="java.lang.Long">
					<description>Unique cinema code</description>
					<modifiers optional="false" initial="true" unique="true"/>
					<persistence type="property"/>
				</attribute>
				<attribute qualifier="name" type="java.lang.String">
					<persistence type="property"/>
				</attribute>
				<attribute qualifier="address" type="java.lang.String">
					<persistence type="property"/>
				</attribute>
			</attributes>
		</itemtype>

		<itemtype code="CinemaHall" generate="true" autocreate="true">
			<deployment table="CinemaHalls" typecode="10003"/>
			<attributes>
				<attribute qualifier="code" type="java.lang.Long">
					<description>Unique hall code</description>
					<modifiers optional="false" initial="true" unique="true"/>
					<persistence type="property"/>
				</attribute>
				<attribute qualifier="name" type="java.lang.String">
					<persistence type="property"/>
				</attribute>
			</attributes>
		</itemtype>

		<itemtype code="Seat" generate="true" autocreate="true">
			<deployment table="Seats" typecode="10002"/>
			<attributes>
				<attribute qualifier="code" type="java.lang.Long">
					<description>Unique seat code</description>
					<modifiers optional="false" initial="true" unique="true"/>
					<persistence type="property"/>
				</attribute>
				<attribute qualifier="row" type="java.lang.Integer">
					<description>Row number where seat is located</description>
					<persistence type="property"/>
				</attribute>
				<attribute qualifier="column" type="java.lang.Integer">
					<description>Position in row where seat is located</description>
					<persistence type="property"/>
				</attribute>
				<attribute qualifier="seatType" type="SeatType">
					<persistence type="property"/>
				</attribute>
			</attributes>
		</itemtype>
	</itemtypes>
</items>
